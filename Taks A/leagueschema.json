{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "footballScoresFixtures": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "homeTeam": { "type": "string" },
            "awayTeam": { "type": "string" },
            "date": { "type": "string", "format": "date" },
            "score": { "type": "string" }
          },
          "required": ["homeTeam", "awayTeam", "date", "score"]
        }
      },
      "premierLeagueTable": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "info": {
              "type": "object",
              "properties": {
                "wins": { "type": "integer" },
                "draws": { "type": "integer" },
                "losses": { "type": "integer" },
                "icons": { "type": "string" },
                "goalsFor": { "type": "integer" },
                "goalsAgainst": { "type": "integer" }
              },
              "required": ["wins", "draws", "losses", "goalsFor", "goalsAgainst"]
            }
          },
          "required": ["name", "info"]
        }
      },
      "premierLeagueTopScorers": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "playerName": { "type": "string" },
            "team": { "type": "string" },
            "goalsScored": { "type": "integer" }
          },
          "required": ["playerName", "team", "goalsScored"]
        }
      }
    },
    "required": ["footballScoresFixtures", "premierLeagueTable", "premierLeagueTopScorers"]
  }
  